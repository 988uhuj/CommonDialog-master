<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!-- 自定义对话框Style -->
    <style name="MyDialog" parent="Theme.CommonListDialog">
        <item name="android:padding">10dp</item> 
        <item name="android:gravity">center</item>
        <item name="width">300dp</item>
        <item name="height">300dp</item>
        <item name="background">@drawable/login_input</item>
        <!-- 偏移量 -->
        <item name="x">100dp</item>
        <item name="y">100dp</item>
        <item name="android:textAppearance">@style/TextApperance</item>
        <!-- 配置数据源，直接显示数据 -->
        <item name="stringArray">@array/city</item>	
        <item name="itemBackground">@drawable/btn_list_item2</item>
    </style>
    
    
    <!-- 自定义对话框中item -->
   	<style name="TextApperance" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">11sp</item>
    </style>
    
    
</resources>
