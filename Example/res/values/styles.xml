<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    
    <!-- 自定义 listStyle -->
    <style name="MyListDialog" parent="BaseListDialog">
        <item name="anim">@style/common_dialog_window_anim_top</item>
        <item name="android:gravity">top</item>
        <item name="background">@drawable/login_input</item>
        <item name="widthFraction">100%</item>
        <item name="android:textAppearance">@style/TextApperance</item>
        <!-- 配置数据源，直接显示数据 -->
        <item name="stringArray">@array/city</item>	
        <item name="itemBackground">@drawable/btn_list_item</item>
    </style>
    
    <!-- testStyle -->
    <style name="testMyListDialog" parent="BaseListDialog">
        <item name="widthFraction">70%</item>
        <item name="title">@string/dialogTitle</item>
        <item name="titleTextAppearance">@style/black18</item>
        <item name="titleBackground">@drawable/com_messagebox_little_bg_up</item>
        <item name="titlePadding">8dp</item>
        
        <!-- 配置数据源，直接显示数据 -->
        <item name="stringArray">@array/test</item>	
        <item name="itemBackgroundHead">@drawable/com_messagebox_little_bg_middle</item>
        <item name="itemBackground">@drawable/com_messagebox_little_bg_middle</item>
        <item name="itemBackgroundFoot">@drawable/com_messagebox_little_bg_middle</item>
       	<item name="itemTextAppearance">@style/black18</item>
        
        <item name="showButtons">true</item>
        <item name="positiveButton">false</item>
        <item name="negativeButtonText">取消</item>
        <item name="negativeButtonBg">@drawable/com_messagebox_little_bg_down</item>
        <item name="buttonTextAppearance">@style/black18</item>
    </style>
    
    
    <!-- 自定义对话框中item -->
   	<style name="TextApperance" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/transparentgray</item>
        <item name="android:textSize">11sp</item>
    </style>
    
   	<style name="black18">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>
   	
   	
   	<!-- 自定义 alertStyle -->
   	<style name="MyAlertDialog" parent="BaseAlertDialog">
        <!-- 自定义窗口属性 -->
        <item name="android:gravity">center</item>
        <item name="anim">@style/common_dialog_window_anim_top</item>
        <item name="background">@drawable/login_input</item>
        <!-- 点击按钮后自动隐藏。默认为true -->
        <item name="autoDismiss">false</item>
        <item name="type">alert</item>
        
        <!-- 可覆盖Appearance中的属性 -->
        <!-- 自定义list item属性 -->
        <item name="titleTextColor">@color/light_gray</item>
        <item name="titleTextSize">24sp</item>
        <item name="title">"Toast"</item>
        <item name="titleBackground">@drawable/btn_list_item</item>
        
       	<item name="contentTextColor">@color/transparentgray</item>
        <item name="contentTextSize">12sp</item>
        <item name="content">"Do you want to exit?"</item>
        <item name="contentBackground">@drawable/btn_list_item</item>
        
        <item name="positiveButton">true</item> 
        <item name="positiveButtonText">"confirm"</item>
        <item name="positiveButtonBg">@drawable/btn_list_item</item>
        <item name="negativeButton">true</item>
        <item name="negativeButtonText">"cancel"</item>
        <item name="negativeButtonBg">@drawable/btn_list_item</item>
    </style>
    
    
</resources>
