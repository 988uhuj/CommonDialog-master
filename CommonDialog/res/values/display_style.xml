<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
   	<!--  list style -->
    <style name="CommonListDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        
        <!-- 自定义窗口属性 -->
        <item name="android:gravity">center</item>
        <item name="background">@null</item>
        <item name="type">list</item>
        <item name="showButtons">false</item>
        
      	<item name="android:textAppearance">@style/itemText</item>
      	<item name="itemBackground">@drawable/btn_list_item_middle</item>
      	<item name="itemBackgroudHead">@drawable/btn_list_item_head</item>
      	<item name="itemBackgroudFoot">@drawable/btn_list_item_foot</item>
    </style>
    
    <!--  list style with some space between items. -->
    <style name="CommonSpaceListDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        
        <!-- 自定义窗口属性 -->
        <item name="android:gravity">center</item>
        <item name="background">@drawable/login_input</item>
        <item name="type">list</item>
        <item name="showButtons">false</item>
        
      	<item name="itemMarginTopAndBottom">6dp</item>
    </style>
    
    
    <style name="Widget">
    </style>
    
    <style name="itemText" parent="Widget">
        <item name="android:textStyle">bold</item>
       	<item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>
    
    
    <!--  alert style -->
    <style name="CommonAlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        
        <!-- 自定义窗口属性 -->
        <item name="widthFraction">80%</item>	
        <item name="android:gravity">center</item>
        <item name="background">@drawable/login_input</item>
        <item name="type">alert</item>
        
        <item name="titleTextColor">@color/light_gray</item>
        <item name="titleTextSize">14sp</item>
        <item name="title">提示</item>
        
        <item name="positiveButtonText">确定</item>
        <item name="positiveButtonBg">@drawable/btn_list_item</item>
        <item name="negativeButtonText">取消</item>
        <item name="negativeButtonBg">@drawable/btn_list_item</item>
        <item name="buttonMargin">2dp</item>
        
      	<item name="contentTextColor">@color/transparentgray</item>
        <item name="contentTextSize">12sp</item>
        <item name="content">"This is a content"</item>
    </style>
    
    <!--  empty style -->
    <style name="CommonEmptyDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
    </style>
    
    
    
    
    <!-- 对话框动画 -->
    <style name="common_dialog_window_anim_top" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/push_down_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
    <style name="common_dialog_window_anim_bottom" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>
    <style name="common_dialog_window_anim_left" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/push_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item>
    </style>
    <style name="common_dialog_window_anim_right" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_right_out</item>
    </style>
</resources>
